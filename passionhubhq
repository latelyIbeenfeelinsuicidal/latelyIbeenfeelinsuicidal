-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "PassionHub"

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 500)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -250)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
mainFrame.BorderSizePixel = 0
mainFrame.Visible = false
mainFrame.Parent = ScreenGui
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.ClipsDescendants = true
mainFrame.BackgroundTransparency = 0.2
mainFrame.Style = Enum.FrameStyle.Rounded

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 40)
titleLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
titleLabel.Text = "PassionHub"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 24
titleLabel.TextAlign = Enum.TextAnchor.MiddleCenter
titleLabel.Parent = mainFrame

-- Draggable functionality
local dragging = false
local dragInput, dragStart, startPos
local function updateDrag(input)
    local delta = input.Position - dragStart
    mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

titleLabel.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
        input.Changed:Connect(function()
            if dragging then
                updateDrag(input)
            end
        end)
    end
end)

titleLabel.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

-- Tabs Container
local tabButtons = {}
local tabs = {}

local function createTab(tabName, position)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 100, 0, 40)
    button.Position = UDim2.new(0, 0, 0, position)
    button.Text = tabName
    button.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextSize = 18
    button.Parent = mainFrame

    local tab = Instance.new("Frame")
    tab.Size = UDim2.new(1, 0, 1, -40)
    tab.Position = UDim2.new(0, 0, 0, 40)
    tab.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    tab.Visible = false
    tab.Parent = mainFrame
    table.insert(tabs, tab)

    button.MouseButton1Click:Connect(function()
        for _, t in pairs(tabs) do
            t.Visible = false
        end
        tab.Visible = true
    end)
end

-- Create Tabs for Aimbots, WalkSpeed, and Features
createTab("Aimbots", 40)
createTab("WalkSpeed", 80)
createTab("Features", 120)

-- Aimbots Tab (Low and High Arc)
local aimbotSection = Instance.new("Frame")
aimbotSection.Size = UDim2.new(1, 0, 1, 0)
aimbotSection.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
aimbotSection.Parent = tabs[1]

local lowArcToggle = Instance.new("TextButton")
lowArcToggle.Size = UDim2.new(1, 0, 0, 50)
lowArcToggle.Position = UDim2.new(0, 0, 0, 0)
lowArcToggle.Text = "Low Arc Aimbot"
lowArcToggle.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
lowArcToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
lowArcToggle.TextSize = 18
lowArcToggle.Parent = aimbotSection

local highArcToggle = Instance.new("TextButton")
highArcToggle.Size = UDim2.new(1, 0, 0, 50)
highArcToggle.Position = UDim2.new(0, 0, 0, 60)
highArcToggle.Text = "High Arc Aimbot"
highArcToggle.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
highArcToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
highArcToggle.TextSize = 18
highArcToggle.Parent = aimbotSection

-- WalkSpeed Tab
local walkSpeedTab = Instance.new("Frame")
walkSpeedTab.Size = UDim2.new(1, 0, 1, 0)
walkSpeedTab.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
walkSpeedTab.Parent = tabs[2]

local walkSpeedSlider = Instance.new("TextBox")
walkSpeedSlider.Size = UDim2.new(1, 0, 0, 50)
walkSpeedSlider.Position = UDim2.new(0, 0, 0, 0)
walkSpeedSlider.Text = "WalkSpeed Multiplier: 1"
walkSpeedSlider.TextColor3 = Color3.fromRGB(255, 255, 255)
walkSpeedSlider.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
walkSpeedSlider.TextSize = 18
walkSpeedSlider.Parent = walkSpeedTab

-- Features Tab (Auto Guard, Reach)
local featuresTab = Instance.new("Frame")
featuresTab.Size = UDim2.new(1, 0, 1, 0)
featuresTab.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
featuresTab.Parent = tabs[3]

local autoGuardToggle = Instance.new("TextButton")
autoGuardToggle.Size = UDim2.new(1, 0, 0, 50)
autoGuardToggle.Position = UDim2.new(0, 0, 0, 0)
autoGuardToggle.Text = "Auto Guard"
autoGuardToggle.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
autoGuardToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
autoGuardToggle.TextSize = 18
autoGuardToggle.Parent = featuresTab

local reachSlider = Instance.new("TextBox")
reachSlider.Size = UDim2.new(1, 0, 0, 50)
reachSlider.Position = UDim2.new(0, 0, 0, 60)
reachSlider.Text = "Reach Distance: 1"
reachSlider.TextColor3 = Color3.fromRGB(255, 255, 255)
reachSlider.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
reachSlider.TextSize = 18
reachSlider.Parent = featuresTab

-- Toggle GUI with Left Control
local isGuiOpen = false
local function toggleGui()
    isGuiOpen = not isGuiOpen
    mainFrame.Visible = isGuiOpen
end

game:GetService("UserInputService").InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.LeftControl then
        toggleGui()
    end
end)

-- Feature Functionality
local lowArcAimbotEnabled = false
local highArcAimbotEnabled = false
local walkSpeedMultiplier = 1
local reachDistance = 1
local autoGuardEnabled = false

-- Aimbot Functionality
lowArcToggle.MouseButton1Click:Connect(function()
    lowArcAimbotEnabled = not lowArcAimbotEnabled
    lowArcToggle.Text = lowArcAimbotEnabled and "Low Arc Aimbot (ON)" or "Low Arc Aimbot (OFF)"
end)

highArcToggle.MouseButton1Click:Connect(function()
    highArcAimbotEnabled = not highArcAimbotEnabled
    highArcToggle.Text = highArcAimbotEnabled and "High Arc Aimbot (ON)" or "High Arc Aimbot (OFF)"
end)

walkSpeedSlider.FocusLost:Connect(function()
    local multiplier = tonumber(walkSpeedSlider.Text:match("%d+"))
    if multiplier then
        walkSpeedMultiplier = multiplier
        walkSpeedSlider.Text = "WalkSpeed Multiplier: " .. walkSpeedMultiplier
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16 * walkSpeedMultiplier
    end
end)

reachSlider.FocusLost:Connect(function()
    local distance = tonumber(reachSlider.Text:match("%d+"))
    if distance then
        reachDistance = distance
        reachSlider.Text = "Reach Distance: " .. reachDistance
    end
end)

autoGuardToggle.MouseButton1Click:Connect(function()
    autoGuardEnabled = not autoGuardEnabled
    autoGuardToggle.Text = autoGuardEnabled and "Auto Guard (ON)" or "Auto Guard (OFF)"
end)
